# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         Restaurants.index

# Restaurant

GET     /restaurants                              Restaurants.index
GET     /restaurant/{id}                          Restaurants.show
GET     /restaurants/create                       Restaurants.create
POST    /restaurants/create                       Restaurants.saveCreate
GET     /restaurant/{id}/edit                     Restaurants.edit
POST    /restaurant/{id}                          Restaurants.saveEdit
DELETE  /restaurant/{id}                          Restaurants.destroy 

# Item

GET     /items                                    Items.index
GET     /item/create                              Items.create
POST    /item/create                              Items.saveCreate
GET     /item/{id}/edit                           Items.edit
POST    /item/{id}                                Items.saveEdit
DELETE  /item/{id}                                Items.destroy

# Menu

GET     /menus                                    Menus.index
GET     /menu/{id}                                Menus.show
GET     /menu/create                              Menus.create
POST    /menu/create                              Menus.saveCreate
GET     /menu/{id}/edit                           Menus.edit
POST    /menu/{id}                                Menus.saveEdit
GET     /menu/{id}/editListItem                   Menus.editListItem
POST    /menu/{id}/editListItem                   Menus.saveEditListItem
DELETE  /menu/{id}                                Menus.destroy

# Order

GET     /restaurant/{id}/order                    Order.index
GET     /restaurant/{id}/order/create             Order.create
POST    /restaurant/{id}/order/create             Order.saveCreate
GET     /restaurant/{id}/order/{id_order}/edit    Order.edit
POST    /restaurant/{id}/order/{id_order}         Order.saveEdit
DELETE  /restaurant/{id}/order/{id_order}         Order.destroy

# Table

GET     /restaurant/{id}/table                    Table.index
GET     /restaurant/{id}/table/create             Table.create
POST    /restaurant/{id}/table/create             Table.saveCreate
DELETE  /restaurant/{id}/table/{id_table}         Table.destroy

# Waiter

GET     /restaurant/{id}/waiter                   Waiter.index
GET     /restaurant/{id}/waiter/create            Waiter.create
POST    /restaurant/{id}/waiter/create            Waiter.saveCreate
GET     /restaurant/{id}/waiter/{id_table}/edit   Waiter.edit
POST    /restaurant/{id}/waiter/{id_table}        Waiter.saveEdit
DELETE  /restaurant/{id}/waiter/{id_table}        Waiter.destroy

# Ignore favicon requests
GET     /favicon.ico                              404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                  staticDir:public

# Catch all
*       /{controller}/{action}                    {controller}.{action}
