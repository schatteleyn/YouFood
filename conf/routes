# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                                   Restaurants.index

# Restaurant

GET     /restaurants                                                        Restaurants.index
GET     /restaurant/{id}                                                    Restaurants.show
GET     /restaurants/create                                                 Restaurants.create
POST    /restaurants/create                                                 Restaurants.saveCreate
GET     /restaurant/{id}/edit                                               Restaurants.edit
POST    /restaurant/{id}                                                    Restaurants.saveEdit
DELETE  /restaurant/{id}                                                    Restaurants.destroy 

# Category

GET     /restaurants/categories                                             Categories.index
GET     /restaurants/category/{id_category}                                 Categories.show
GET     /restaurants/categories/create                                      Categories.create
POST    /restaurants/categories/create                                      Categories.saveCreate
GET     /restaurants/category/{id_category}/edit                            Categories.edit
POST    /restaurants/category/{id_category}                                 Categories.saveEdit
DELETE  /restaurants/category/{id_category}                                 Categories.destroy

# Item

GET     /restaurants/category/{id_category}                                 Items.index
GET     /restaurants/category/{id_category}/item/create                     Items.create
POST    /restaurants/category/{id_category}/item/create                     Items.saveCreate
GET     /restaurants/category/{id_category}/item/{id_item}/edit             Items.edit
POST    /restaurants/category/{id_category}/item/{id_item}                  Items.saveEdit
DELETE  /restaurants/category/{id_category}/item/{id_item}                  Items.destroy

# Menu

GET     /restaurants/menus                                                  Menus.index
GET     /restaurants/menu/{id}                                              Menus.show
GET     /restaurants/menu/create                                            Menus.create
POST    /restaurants/menu/create                                            Menus.saveCreate
GET     /restaurants/menu/{id}/edit                                         Menus.edit
POST    /restaurants/menu/{id}                                              Menus.saveEdit
GET     /restaurants/menu/{id}/editListItem                                 Menus.editListItem
POST    /restaurants/menu/{id}/editListItem                                 Menus.saveEditListItem
DELETE  /restaurants/menu/{id}                                              Menus.destroy

# Order

GET     /restaurant/{id}/order                                              Orders.index
GET     /restaurant/{id}/order/client/create                                Orders.create
POST    /restaurant/{id}/order/client/create                                Orders.saveCreate
GET     /restaurant/{id}/order/{id_order}/edit                              Orders.edit
POST    /restaurant/{id}/order/{id_order}                                   Orders.saveEdit
DELETE  /restaurant/{id}/order/{id_order}                                   Orders.destroy

# Table

GET     /restaurant/{id}/table                                              Tables.index
GET     /restaurant/{id}/table/create                                       Tables.create
POST    /restaurant/{id}/table/create                                       Tables.saveCreate
DELETE  /restaurant/{id}/table/{id_table}                                   Tables.destroy

# Waiter

GET     /restaurant/{id}                                                    Waiters.index
GET     /restaurant/{id}/waiter/create                                      Waiters.create
POST    /restaurant/{id}/waiter/create                                      Waiters.saveCreate
GET     /restaurant/{id}/waiter/{id_waiter}/edit                            Waiters.edit
POST    /restaurant/{id}/waiter/{id_waiter}                                 Waiters.saveEdit
DELETE  /restaurant/{id}/waiter/{id_waiter}                                 Waiters.destroy

# Client

GET     /restaurant/{id}/client/home                                        Clients.index
GET     /restaurant/{id}/client/menu/categories                             Clients.menu
GET     /restaurant/{id}/client/menu/items                                  Clients.items

# Ignore favicon requests
GET     /favicon.ico                                                        404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                                            staticDir:public

# Catch all
*       /{controller}/{action}                                              {controller}.{action}
