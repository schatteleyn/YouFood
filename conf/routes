# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         Restaurants.index

# Restaurant

GET     /restaurants                              Restaurants.index
GET     /restaurant/{id}                          Restaurants.show
GET     /restaurants/create                       Restaurants.create
POST    /restaurants/create                       Restaurants.saveCreate
GET     /restaurant/{id}/edit                     Restaurants.edit
POST    /restaurant/{id}                          Restaurants.saveEdit
DELETE  /restaurant/{id}                          Restaurants.destroy 

# Item

GET     /restaurants/items                        Items.index
POST    /restaurant/item/create                   Items.create
POST    /restaurant/item/create              Items.saveCreate
GET     /restaurant/{id}/item/{id_item}/edit      Items.edit
POST    /restaurant/{id}/item/{id_item}           Items.saveEdit
DELETE  /restaurant/{id}/item/{id_item}           Items.destroy

# Menu

GET     /restaurants/menus                        Menu.index
GET     /restaurant/{id}/menu/{id_menu}           Menu.show
POST    /restaurant/{id}/menu/create              Menu.create
GET     /restaurant/{id}/menu/{id_menu}/edit      Menu.edit
POST    /restaurant/{id}/menu/{id_menu}           Menu.saveEdit
DELETE  /restaurant/{id}/menu/{id_menu}           Menu.destroy

# Order

GET     /restaurant/{id}/order                    Order.index
POST    /restaurant/{id}/order/create             Order.create
GET     /restaurant/{id}/order/{id_order}/edit    Order.edit
POST    /restaurant/{id}/order/{id_order}         Order.saveEdit
DELETE  /restaurant/{id}/order/{id_order}         Order.destroy

# Table

GET     /restaurant/{id}/table                    Table.index
POST    /restaurant/{id}/table/create             Table.create
DELETE  /restaurant/{id}/table/{id_table}         Table.destroy

# Waiter

GET     /restaurant/{id}/waiter                   Waiter.index
POST    /restaurant/{id}/waiter/create            Waiter.create
GET     /restaurant/{id}/waiter/{id_table}/edit   Waiter.edit
POST    /restaurant/{id}/waiter/{id_table}        Waiter.saveEdit
DELETE  /restaurant/{id}/waiter/{id_table}        Waiter.destroy

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
